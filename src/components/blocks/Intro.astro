---
const { title } = Astro.props;
---

<section class="rounded-section-outer pb-0">
  <div class="rounded-section-inner bg-sectionGrey py-20">
    <div class="wrapper-medium flex items-start flex-wrap md:flex-nowrap">
      {/* title */}
      <div class="w-full md:w-1/3">
        <div class="max-w-sm">
          <slot name="title" />
        </div>
      </div>
      {/* textarea */}
      <div class="w-full md:w-2/3 md:pl-20 pt-6 md:pt-0">
        <slot name="textarea" />
      </div>
    </div>
  </div>
</section>
