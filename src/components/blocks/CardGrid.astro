---
/////////////////////////////////
// COMPONENTS
////////////////////////////////
import SectionIntro from "../partials/SectionIntro.astro";
/////////////////////////////////
// DATA
////////////////////////////////
interface Props {
  title: string;
  body: string;
}

const { title, body } = Astro.props;
---

<section class="rounded-section-outer">
  <div class="rounded-section-inner py-20">
    <div class="wrapper-medium flex items-start flex-wrap md:flex-nowrap">
      <div class="w-full md:w-1/3">
        <SectionIntro title={title} body={body} />
      </div>
      <ul
        class="w-full md:w-2/3 md:pl-20 pt-12 md:pt-0 grid grid-cols-1 sm:grid-cols-2 gap-9"
      >
        <slot />
      </ul>
    </div>
  </div>
</section>
